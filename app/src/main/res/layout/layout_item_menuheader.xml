<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/btnCuaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCuaca"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#ffdddddd"
            android:src="@drawable/ic_android_black_24dp" />

        <TextView
            android:id="@+id/labelCuaca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuaca" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btnAktivitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgAktifitas"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:backgroundTint="#ffdddddd"
            android:src="@drawable/ic_android_black_24dp" />

        <TextView
            android:id="@+id/labelActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktifitas" />
    </LinearLayout>

</LinearLayout>