<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerArtikel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgArtikel"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/labelTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menanam"
            android:textColor="#F13E3E"></TextView>

        <TextView
            android:id="@+id/labelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTag"
            android:text="Mudah Menananm Cabe"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/labelDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTitle"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/imgArtikel"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Semakin banyak kegiatan seru bla bla bla aoeuaoeuaoeuaoeuaoeuaoeuaoeuaoeu aoeuaoeu aoeuaoeu aoeuaoeu aoeuaoeu aoeuaoeuao aoeuaoeuaoeu"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>